test infer relation instance type [[
  model
  
    entity X {
      i : Int 1
    }
  
    relation XYRelation {
      X.yRelation * -> z
      X.zRelation * -> y
      y.z <-> z.y
    }
  
  data
  
    x : X {
      i = 5
      y = < [[rel]] { } > x1 {
        i = 4
      }
    }
]] run name-get-type-test on #1 to "XYRelation"

